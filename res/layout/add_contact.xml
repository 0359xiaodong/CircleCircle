<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"  
    xmlns:tools="http://schemas.android.com/tools"  
    android:layout_width="match_parent"  
    android:layout_height="match_parent"
    android:background="#FFFFFF" 
    android:baselineAligned="false"
    android:orientation="vertical" > 
    
    
    <LinearLayout
        android:id="@+id/title_liner"  
        android:layout_width="fill_parent"  
        android:layout_height="40dip"  
        android:background="#000000"
        android:layout_alignParentTop="true"  >
        
        <TextView 
	        android:id="@+id/contact_textview"
	        android:layout_width="wrap_content" 
    		android:layout_height="40dp" 
	        android:text="@string/contatc_title"
	        android:gravity="center_vertical|left"
	        android:layout_marginLeft="5dp"
	        android:textSize="18sp"
	        android:textColor="#FFFFFF"
	        android:layout_weight="7" 
        /> 

        <Button 
            android:id="@+id/addcon_button"
            android:layout_width="wrap_content" 
            android:layout_height="fill_parent"

            android:layout_weight="1" 
            />
        
    </LinearLayout>
    
    
    <LinearLayout 
        android:id="@+id/liner_layout" 
        android:layout_width="match_parent"  
	    android:layout_height="match_parent" 
	    android:baselineAligned="false"

	    android:layout_below="@id/title_liner"
	    android:orientation="horizontal" >
	    
	    <LinearLayout
	       android:id="@+id/liner_layout3"  
	       android:layout_width="fill_parent"  
	       android:layout_height="100dip"  
	       android:background="#FFFFFF"
	       android:layout_marginTop="5dp"
	       android:layout_marginLeft="5dp"
	       android:layout_weight="3"  >
	       
	        <ImageButton 
	            android:id="@+id/imgcont_button" 
	            android:layout_width="60dp"
	            android:layout_height="70dp"
	            android:layout_marginLeft="10dp"
	        	android:layout_marginTop="13dp"
	            android:src="@drawable/ic_contact_picture" />
	
	  	 </LinearLayout>
	   
	   	 <LinearLayout 
		       android:id="@+id/liner_layout4"  
		       android:layout_width="fill_parent"  
		       android:layout_height="100dip"  
		       android:layout_marginTop="3dp"
		       android:background="#FFFFFF"
		       android:layout_weight="1" 
		       android:layout_marginRight="15dp"
		       android:orientation="vertical">   
	       <EditText 
	           android:id="@+id/edit_name"
	           android:layout_width="match_parent" 
	           android:layout_height="wrap_content"
	
	           />
	       <EditText 
	           android:id="@+id/eidt_note"
	           android:layout_width="match_parent" 
	           android:layout_height="wrap_content"
	
	           />
	       
	     </LinearLayout>         
	   	 
    </LinearLayout>
    
    
    <LinearLayout 
        android:id="@+id/liner_layout5"  
        android:layout_width="fill_parent"  
        android:layout_height="100dip"  
        android:background="#FFFFFF"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="140dp"
		android:layout_marginRight="15dp"
        android:orientation="vertical"> 
		       
        <TextView 
            android:id="@+id/textview_view1"
            android:layout_width="fill_parent"
            android:layout_marginRight="15dp"
            android:layout_height="20dp"
            />
        <ImageView
            android:id="@+id/gray_line"
            android:layout_width="fill_parent"
            android:layout_height="2dp" 
            android:src="@drawable/gray_line"
            />
        
        <LinearLayout 
            android:id="@+id/liner_layout6"  
	        android:layout_width="fill_parent"  
	        android:layout_height="40dip"  
	        android:background="#FFFFFF"

	        android:orientation="horizontal"> 
	        
            <TextView
                android:id="@+id/textview_phone" 
                android:layout_width="40dp"
                android:layout_height="40dp" 
                android:gravity="left"

                />
            <EditText
	            android:id="@+id/edit_num"
	            android:layout_width="fill_parent" 
	            android:layout_height="40dp"

            />
            
            
            </LinearLayout>
        
        <Button 
            android:id="@+id/dfhg"  
            android:layout_width="30dp"
            android:layout_height="40dp"
            />
        </LinearLayout>
    



    
    

</RelativeLayout >  
